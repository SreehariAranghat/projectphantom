
@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>HelpDesk | SupportPanda | Login</title>

    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/font-awesome/css/font-awesome.css" rel="stylesheet">

    <link href="~/css/animate.css" rel="stylesheet">
    <link href="~/css/style.css" rel="stylesheet">

</head>

<body class="gray-bg" style="background-color:dimgray">
   
    <div class="middle-box text-center loginscreen animated fadeInDown">
        @if (ViewBag.IsRegistered == null)
        {
             <div class="ibox">
            <div class="ibox-content">
                <div>
                    <img src="~/favicon.png" width="128" height="128" />
                </div>
                <h3> Register</h3>
                <form class="m-t" role="form" action="~/access/register" method="post">
                    @Html.AntiForgeryToken()
                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger" style="padding:5px;">
                            <strong>@ViewBag.Error</strong>
                        </div>
                    }
                    <div class="input-group m-b">
                        <span class="input-group-addon"><i class="fa fa-user-circle-o"></i></span>
                        <span><input type="text"        placeholder="Name" name="firstname" required="" class="form-control"></span>      
                        <input type="hidden" value="Na" name="lastname" />
                    </div>
                    <div class="input-group m-b">
                        <span class="input-group-addon"><i class="fa fa-at"></i></span>
                        <input type="email" placeholder="Email" name="email" required="" class="form-control">
                    </div>
                    <div class="input-group m-b">
                        <span class="input-group-addon"><i class="fa fa-building"></i></span>
                        <input type="text" placeholder="Company" name="client" required="" class="form-control">
                    </div>
                    <div class="input-group m-b">
                        <span class="input-group-addon"><i class="fa fa-key"></i></span>
                        <input type="password" placeholder="Password" name="password" required="" class="form-control">
                    </div>
                    <button type="submit" class="btn btn-primary block full-width m-b">Register</button>
                    <p class="text-muted text-center"><small>Already have a account ?</small></p>
                    <a class="btn btn-sm btn-white btn-block" href="~/access/authenticate">Login</a>
                </form>
                <p class="m-t"> <small>Support<strong>Panda</strong> &copy; 2017</small> </p>
            </div>
        </div>
        }
        else
        {
            <div class="ibox" style="width:500px;">
                <div class="ibox-content">
                    <div>
                        <img src="~/favicon.png" width="128" height="128" />
                    </div>
                   
                    <h3>Welcome to Support Panda</h3>
                    <p><h2><i class="fa fa-2x fa-check-circle-o text-success"></i></h2>Your account has been created successfully.</p>
                    <p>You will be redirected to the application in a moment.</p>
                </div>
            </div>
        }

    </div>

    <!-- Mainly scripts -->
    <script src="~/js/jquery-3.1.1.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>

    @if(ViewBag.IsRegistered != null)
    {
        <script type="text/javascript">
            setTimeout(function () {
                window.location.href = "/home";
            }, 10000);
        </script>
    }
</body>

</html>