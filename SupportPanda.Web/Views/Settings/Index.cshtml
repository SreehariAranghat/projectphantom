
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-12">
        <h2><i class="fa fa-cogs"></i>&nbsp;&nbsp;Settings</h2>
    </div>
</div>

<div class="m-sm">
    <div class="ibox float-e-margins">
        <div class="ibox-content">
            <div>
                <div class="m-b-sm"><strong>General</strong></div>
             
                <div>
                    @if (User.IsInRole(SupportPanda.Core.Permissions.PER_GENERAL_MANAGE_AGENTS))
                    {
                        <a class="btn btn-default btn-lg text-center" href="~/agents" style="width:96px;" ><i class="fa fa-user-o"></i><br /><small>Agents</small></a>
                    }

                    @if (User.IsInRole(SupportPanda.Core.Permissions.PER_GENERAL_MANAGE_AGENTGROUPS))
                    {
                        <a class="btn btn-default btn-lg text-center" href="~/groups" style="width:96px;"><i class="fa fa-users"></i><br /><small>Groups</small></a>
                    }
                </div>
            </div>
            <hr class="hr-line-dashed" />
            <div >
                <div class="m-b-sm"><strong>Security</strong></div>
                
                <div>
                    @if (User.IsInRole(SupportPanda.Core.Permissions.PER_SECURITY_MANAGEROLES))
                    {
                        <a class="btn btn-default btn-lg" href="~/settings/roles"  style="width:96px;"><i class="fa fa-user-secret"></i><br /><small>Roles</small></a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>